<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>,
           <%= pluralize(@user.favorites.count, 'favorite') %>
         </small>
       </div>
     </div>
   </div>
 </div>

 <h2>Posts</h2>
  <% if post_exists?(@user) %>
    <%= render @user.posts %>
  <% else %>
    <%= "#{@user.name}" %> has not created any posts yet.
  <% end %>

 <h2>Comments</h2>
  <% if comment_exists?(@user) %>
    <%= render @user.comments %>
  <% else %>
    <%= "#{@user.name}" %> has not submitted any comments yet.
  <% end %>

  <h2>Favorites</h2>
       <% @user.favorites.each do |favorite| %>
         <div class="favorites">
           <%= favorite.post.title %>
           <% avatar_url = @user.avatar_url(40) %>
             <%= image_tag avatar_url, class: 'media-object' %>
           <div class="fav">
             <p>Votes: <%= favorite.post.votes.count %></p>
             <p>Comments: <%= favorite.post.comments.count %></p>
           </div>
         </div>
       <% end %>
